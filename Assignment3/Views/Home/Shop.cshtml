<!--to display the title to the title section-->
@{
    ViewData["Title"] = "Shop";
}

<!--to use the css file-->
<link rel="stylesheet" href="~/css/site.css">

<!--to display the title-->
<h1>@ViewData["Title"]</h1>

<!--text-center-bootstrap-->
<div class="text-center">
    <div class="item">
        <img src="~/images/tubo.jpg" height="190" width="220">
