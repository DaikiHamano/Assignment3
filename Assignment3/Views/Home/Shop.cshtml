        <p>Japanese Vase Called TSUBO</p>
        <p>$100</p>
        <!--action is ction to do and the item will be the String -->      <!--the number and price to the create page-->
        <a asp-controller="Carts" asp-action="Create" asp-route-number=1 asp-route-price=100>Add to the cart!!</a>
        <!--created detail and the action-->
        <a asp-controller="Home" asp-action="Detail" asp-route-number=1 asp-route-price=100 asp-route-name="Vase" asp-route-data="Japanese Vase Called TSUBO">Detail</a>
